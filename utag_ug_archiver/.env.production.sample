# Production deployment settings
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=example.com
CSRF_TRUSTED_ORIGINS=https://example.com

# Primary database connection (remote Postgres host)
DATABASE_URL=postgres://ug_portal:strong-password@db-host:5432/utag_portal
DB_CONN_MAX_AGE=60
# Optional overrides if DATABASE_URL is not used
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=utag_portal
# DB_USER=ug_portal
# DB_PASSWORD=strong-password
# DB_HOST=db-host
# DB_PORT=5432
# DB_SSL_MODE=require

# Redis / Celery endpoints
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Static & media paths on the container
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Email delivery (example uses SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
EMAIL_HOST_USER=you@example.com
EMAIL_PASSWORD=app-password
DEFAULT_FROM_EMAIL="UTAG UG <no-reply@example.com>"

# Docker compose knobs
WEB_PORT=8000
RUN_MIGRATIONS=1
RUN_COLLECTSTATIC=1
