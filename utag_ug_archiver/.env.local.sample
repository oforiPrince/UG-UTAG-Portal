# Local development settings (Docker or host)
DJANGO_SECRET_KEY=local-dev-secret
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Use SQLite by default for local work
DB_ENGINE=django.db.backends.sqlite3
SQLITE_NAME=/app/db.sqlite3
# Uncomment to use a local Postgres container instead of SQLite
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=app_database
# DB_USER=db_user
# DB_PASSWORD=local-db-password
# DB_HOST=db
# DB_PORT=5432

# Redis / Celery (match docker-compose service names)
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Static & media paths when running inside the container
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Email delivery (console backend for local testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=0
EMAIL_USE_SSL=0
EMAIL_HOST_USER=
EMAIL_PASSWORD=
DEFAULT_FROM_EMAIL="UTAG UG <no-reply@example.com>"

# Docker compose knobs
WEB_PORT=8000
RUN_MIGRATIONS=1
RUN_COLLECTSTATIC=0
